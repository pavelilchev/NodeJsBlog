<form method="POST">
  <h2>DeleteArticle</h2>
  <div class="row">
    <div class="col-xs-12 single-article">
      <h3>
        {{title}}</h3>
      <span><i>posted on {{date}}</i></span><br/>
      <span><small>from <b>{{author.username}}</b></small></span>
      <p>{{description}}</p>
      <button type="submit" class="btn btn-danger">Delete</button>
    </div>
  </div>
</form>